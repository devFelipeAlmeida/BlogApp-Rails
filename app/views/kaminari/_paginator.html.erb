<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    <% if @posts.prev_page %>
      <li class="page-item">
        <%= link_to 'Anterior', posts_path(page: @posts.prev_page), class: 'page-link' %>
      </li>
    <% else %>
      <li class="page-item disabled">
        <span class="page-link">Anterior</span>
      </li>
    <% end %>

    <% (1..@posts.total_pages).each do |page_num| %>
      <li class="page-item <%= 'active' if @posts.current_page == page_num %>">
        <%= link_to page_num, posts_path(page: page_num), class: 'page-link' %>
      </li>
    <% end %>

    <% if @posts.next_page %>
      <li class="page-item">
        <%= link_to 'Próxima', posts_path(page: @posts.next_page), class: 'page-link' %>
      </li>
    <% else %>
      <li class="page-item disabled">
        <span class="page-link">Próxima</span>
      </li>
    <% end %>
  </ul>
</nav>
