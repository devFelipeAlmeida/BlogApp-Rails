<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-8">
      <div class="card shadow-sm">
        <div class="card-body">

          <h2 class="mb-4"><%= t("posts_create.title_main") %></h2>

          <%= form_with(model: post, local: true) do |form| %>
            <div class="mb-4">
              <%= form.label :title, t("posts_create.title_post"), class: "form-label" %>
              <%= form.text_field :title, class: "form-control form-control-lg", placeholder: t("posts_create.title_placeholder") %>
            </div>

            <div class="mb-4">
              <%= form.label :content, t("posts_create.content_post"), class: "form-label" %>
              <%= form.text_area :content, class: "form-control", rows: 10, placeholder: "Escreva o conteÃºdo do seu post aqui..." %>
            </div>

            <div class="mb-4">
              <%= form.label :tags, "Tags", class: "form-label" %>
              <%= form.text_field :tags, class: "form-control", placeholder: "Ex: ruby, rails, javascript", 
                  value: @post.tags.map(&:name).join(", ") %>
            </div>

            <div class="d-flex justify-content-end">
              <%= link_to t("posts_create.cancel_post"), posts_path, class: 'btn btn-outline-secondary me-2' %>
              <%= form.submit t("posts_create.save_post"), class: 'btn btn-success' %>
            </div>
          <% end %>

          <hr class="my-5">

          <h2 class="mb-4"><%= t("posts_create.file_upload") %></h2>

          <%= form_with url: '/uploads', method: :post, local: true, html: { multipart: true } do |f| %>
            <div class="mb-3">
              <label for="file" class="form-label"><%= t("posts_create.file_txt") %></label>
              <%= file_field_tag :file, class: "form-control", id: "file", accept: ".txt" %>
            </div>

            <div>
              <%= submit_tag t("posts_create.file_btn"), class: "btn btn-primary" %>
            </div>
          <% end %>

          <div class="mt-4">
            <p><strong><%= t("posts_create.file_format") %></strong></p>
            <ul>
              <li><%= t("posts_create.file_description") %></li>
              <pre>
                <%= t("posts_create.file_example") %>
                <%= t("posts_create.file_example_2") %>
              </pre>
              <li><%= t("posts_create.file_explanation") %></li>
            </ul>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
