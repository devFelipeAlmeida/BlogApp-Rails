    <div class="container auth-container">
        <div class="container position-relative">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h4 class="card-title text-center mb-4"><%= t("create_user.title_create") %></h4>
                    <!-- Formulário de Registro -->
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                        <!-- Campo Nome -->
                        <div class="mb-3">
                            <%= f.label :name, t("create_user.name_label"), class: "form-label" %>
                            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
                        </div>

                        <!-- Campo Email -->
                        <div class="mb-3">
                            <%= f.label :email, "Email", class: "form-label" %>
                            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                        </div>

                        <!-- Campo Senha -->
                        <div class="mb-3">
                            <%= f.label :password, t("create_user.password_label"), class: "form-label" %>
                            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                        </div>

                        <!-- Campo Confirmação de Senha -->
                        <div class="mb-3">
                            <%= f.label :password_confirmation, t("create_user.password_confirmation_label"), class: "form-label" %>
                            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
                        </div>

                        <!-- Botão de Submissão -->
                        <%= f.submit t("create_user.submit_button_register"), class: "btn btn-primary w-100" %>

                    <% end %>
                </div>
            </div>
        </div>
    </div>

